{
  "compilerOptions": {
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "jsx": "react",
    "types": [ "node", "webpack-env"],
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["src/*", "src/**/*","build/*"],
  "exclude": ["node_modules"]
}
